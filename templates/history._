 <nav class='pin-topright pad1y pad2x'>
    <div class='rounded-toggle'><!--
      --><a class='js-tab <%= obj.style  ? 'active' : '' %>' href='#settings-style'>Styles</a><!--
      --><a class='js-tab <%= obj.source ? 'active' : '' %>' href='#settings-source'>Sources</a>
    <div>
  </nav>

<div id='settings-style' <% if (obj.style) { %>class='active'<% } %>>
  <h3 class='pad2 keyline-bottom'>Styles</h3>
  <div class='grid clearfix pad1'>

    <div class='col6 pad1 space-bottom1'>
      <a class='loud button col12 icon plus create' href='/new/style'>New style</a>
    </div>
    <div class='col6 pad1 space-bottom1'>
      <a class='button quiet col12 icon folder' href='#browsestyle'>Browse</a>
    </div>

    <div class='col12 fl clearfix pad1x'>
      <% _(obj.history.style).chain()
        .sortBy(function(item) { return -1 * item.mtime })
        .each(function(item) { %>
      <div class='space-bottom1 contain'>
        <a class='project col12 round small fill-lighten0 quiet strong contain' href='/style?id=<%=item.id%>'>
          <div class='fill-lighten0 small-graphic inline fl' style='background-image:url("/thumb.png?id=<%=item.id%>&mtime=<%=item.mtime%>")'></div>
          <div class='pad1 truncate'>
            <strong><%= item.name || 'Untitled' %></strong><br />
            <code><%= item.id.split('/').pop() %></code>
          </div>
        </a>
        <a href='style?id=<%=item.id%>' class='js-ref-delete x round-right icon pad1x pad2y pin-topright quiet'></a>
      </div>
      <% }); %>
    </div>
  </div>

</div>

<div id='settings-source' <% if (obj.source) { %>class='active'<% } %>>
  <h3 class='keyline-bottom pad2'>Sources</h3>
  <div class='grid pad1 clearfix'>

    <div class='col6 pad1 space-bottom1'>
      <a class='col12 loud button icon plus create' href='/new/source'>New source</a>
    </div>

    <div class='col3 pad1 space-bottom1'>
      <a class='col12 button quiet create col6 icon folder' href='#browsesource'>Browse</a>
    </div>
    <div class='col3 pad1 space-bottom1'>
      <a class='col12 button quiet create col6 icon mapbox' href='#addmapbox'>Mapbox</a>
    </div>

    <div class='col12 fl clearfix pad1x'>
      <% _(obj.history.source).chain()
        .sortBy(function(item) { return -1 * item.mtime })
        .each(function(item) { %>
        <div class='space-bottom1 contain'>
          <a class='project col12 round small fill-lighten0 quiet strong contain' href='/source?id=<%=item.id%>'>
            <div class='small-graphic pin-left z1' style='background-image:url("/thumb.png?id=<%=item.id%>&mtime=<%=item.mtime%>")'></div>
            <span class='fill-darken1 small-graphic inline fl <%=item.id.indexOf('mapbox://') === 0 ? 'remote' : 'source'%>'></span>

            <div class='truncate pad1 '>
              <strong><%= item.name || 'Untitled' %></strong><br />
              <code><%= item.id.split('/').pop() %></code>
            </div>
          </a>
          <a href='source?id=<%=item.id%>' class='js-ref-delete x round-right icon pad1x pad2y pin-topright quiet'></a>
        </div>
      <% }); %>

    </div>
  </div>
</div>

<header class='pad1 clearfix keyline-bottom'>
  <nav class='pad1x tabs col6 fr clearfix'><!--
    --><a class='col6 submit tab <%= obj.style  ? 'active' : '' %>' href='#settings-style'>Styles</a><!--
    --><a class='col6 submit tab <%= obj.source ? 'active' : '' %>' href='#settings-source'>Sources</a>
  </nav>
</header>

<div id='settings-style' <% if (obj.style) { %>class='active'<% } %>>
  <h3 class='pin-topleft pad2 col6'>Styles</h3>
  <div class='grid clearfix pad1'>

    <div class='col6 pad1 space-bottom1'>
      <a class='loud button col12 icon plus create' href='/new/style'>New style</a>
    </div>
    <div class='col6 pad1 space-bottom1'>
      <a class='button quiet col12 icon folder' href='#browsestyle'>Browse</a>
    </div>

  <% _(obj.history.style).chain()
    .sortBy(function(item) { return -1 * item.mtime })
    .each(function(item) { %>
  <div class='fl col12 pad1x space-bottom1'>
    <a class='col12 round small truncate fill-lighten0 quiet strong' href='/style?id=<%=item.id%>'>
      <div class='fill-lighten0 small-graphic inline fl' style='background-image:url("/thumb.png?id=<%=item.id%>&mtime=<%=item.mtime%>")'></div>
      <span class='pad1 inline'>
        <%= item.name || 'Untitled' %><br />
        <code><%= item.id.split('/').pop() %></code>
      </span>
    </a>
  </div>
  <% }); %>
  </div>
</div>

<div id='settings-source' <% if (obj.source) { %>class='active'<% } %>>
  <h3 class='pin-topleft pad2 col6'>Sources</h3>
  <div class='grid pad1 clearfix'>

    <div class='col6 pad1 space-bottom1'>
      <a class='col12 loud button icon plus create' href='/new/source'>New source</a>
    </div>

    <div class='col3 pad1 space-bottom1'>
      <a class='col12 button quiet create col6 icon folder' href='#browsesource'>Browse</a>
    </div>
    <div class='col3 pad1 space-bottom1'>
      <a class='col12 button quiet create col6 icon mapbox' href='#addmapbox'>Mapbox</a>
    </div>

  <% _(obj.history.source).chain()
    .sortBy(function(item) { return -1 * item.mtime })
    .each(function(item) { %>
    <div class='fl col12 pad1x space-bottom1'>
      <a class='col12 round contain truncate fill-lighten0 small strong quiet strong' href='/source?id=<%=item.id%>'>
        <div class='small-graphic pin-left z1' style='background-image:url("/thumb.png?id=<%=item.id%>&mtime=<%=item.mtime%>")'></div>
        <span class='fill-darken1 small-graphic thumbed inline fl <%=item.id.indexOf('mapbox://') === 0 ? 'remote' : 'source'%>'></span>

        <span class='inline pad2x pad1y'>
          <%= item.name || 'Untitled' %><br />
          <code><%= item.id.split('/').pop() %></code>
        </span>
      </a>
    </div>
  <% }); %>
  </div>
</div>

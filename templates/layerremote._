<form class='pane scroll-styled editor fill-dark dark w2 l2' id='layers-<%=obj.id%>'>
  <header class='pad2 keyline-bottom'>
    <h3><%= obj.id %></h3>
    <input type='hidden' name='id' value='<%=obj.id%>' />
    <nav class='pin-topright pad1'><a href='#' class='quiet inline pad1 icon close'></a></nav>
  </header>

  <section class='pad2'>
    <section class='space-bottom'>
      <label class='col12 space-bottom0'>Description</label>
      <input disabled='disabled' class='stretch' type='text' name='description' value='<%= _(obj.description).escape() %>' />
    </section>
    <% if ('minzoom' in obj) { %>

    <section class='keyline-all fill-darken0 round pad1'>
      <section class='clearfix'>
        <label class='inline col3'>Minzoom</label>
        <input disabled='disabled' name='minzoom' class='min' type='range' value='<%= obj.minzoom %>' min='0' max='22' step='1'/>
        <label class='range small strong'><%= obj.minzoom %></label>
      </section>
    <% } %>
    <% if ('maxzoom' in obj) { %>
      <section class='clearfix'>
        <label class='inline col3'>Maxzoom</label>
        <input disabled='disabled' name='maxzoom' class='max' type='range' value='<%= obj.maxzoom %>' min='0' max='22' step='1'/>
        <label class='range small strong'><%= obj.maxzoom %></label>
      </section>
    <% } %>
    </section>

  </section>
</form>

<div class="small layer col12 contain" id="layers-<%=obj.id%>">
  <a href='#layers-<%=obj.id%>' class='pin-left pin-right js-tab'></a>
  <div class='pad1x pad0y keyline-bottom quiet <%=obj.geometry||'document'%> icon'><%=obj.id%></div>
  <div class="center pin-right">
  <% if ('minzoom' && 'maxzoom' in obj) { %>
      <span class="inline zooms pad0 micro"><%= obj.minzoom %>-<%= obj.maxzoom %></span>
  <% } %>
  </div>

  <div class='description'>
    <div class='truncate keyline-bottom col12 pad1'><%=obj.description||'No description.'%></div>
    <% if ('fields' in obj) { %>
    <div class='small pad2y'>
      <% _(obj.fields||{}).each(function(desc,name) { %>
      <div class='field pad1x pad0y clearfix'>
        <span class='field-key col4'><%=name%> </span>
        <span class='quiet col8 pad1x'><%=desc||'No description.'%></span>
      </div>
      <% }); %>
    </div>
    <% } %>
  </div>

</div>
<form class='animate offcanvas-top pane scroll-styled editor dark fill-dark col6 pin-right' id='layers-<%=obj.id%>'>
  <nav class='text-right pad1 keyline-bottom'>
    <span class='pill'><!--
      --><a href='#mode-conf' class='quiet mode-conf short button icon levels'>Configure</a><!--
      --><a href='#mode-fields' class='quiet mode-fields short button icon book'>Fields</a><!--
 --></span>
    <a href='#' class='quiet inline pad1 icon close'></a>
  </nav>
  <section class='pad2 pin-topleft'>
    <h3>
      <%= obj.id %>
    </h3>
    <input type='hidden' name='id' value='<%=obj.id%>' />
  </section>

  <div class='conf'>
    <fieldset>
        <section class='pad2x pad1y keyline-bottom'>
        <label>Description</label>
        <input class='stretch' type='text' name='description' value='<%= _(obj.description).escape() %>' />
      </section>
      <section class='pad2x pad1y keyline-bottom'>
        <label>Shapefile<label>
        <input type='hidden' name='Datasource-type' value='shape' />
        <div class='pill input-pill clearfix'>
          <input class='col8' type='text' name='Datasource-file' value='<%= obj.Datasource.file %>' placeholder='data.shp' pattern='[\w+\d+\.\/_-]+\.(shp|SHP)'/><!--
       --><a href='#browsefile' class='quiet col4 button icon folder browsefile'>Browse</a>
        </div>
      </section>
      <%= this.layerconf(obj) %>
      <section class='pad2'>
        <a href='#' class='button submit margin6 col6'>Done</a>
      </section>
    </fieldset>
  </div>

  <div class='fields'><%= this.layerfields(obj.vt.fields) %></div>
</form>

<form class='pane scroll-styled editor dark w2 l2' id='layers-<%=obj.id%>'>
  <nav>
    <span class='pill'><!--
      --><a href='#mode-conf' class='button icon conf'></a><!--
      --><a href='#mode-fields' class='button icon fields'></a><!--
    --></span>
    <a href='#' class='button icon close'></a>
  </nav>
  <section>
    <h2>
      <%= obj.id %>
    </h2>
    <input type='hidden' name='id' value='<%=obj.id%>' />
  </section>

  <div class='conf'>
    <section>
      <label class='inline'>Description</label>
      <input class='stretch' type='text' name='description' value='<%= _(obj.description).escape() %>' />
    </section>
    <section>
      <label>Shapefile<label>
      <input type='hidden' name='Datasource-type' value='shape' />
      <div class='pill'>
        <input size='40' type='text' name='Datasource-file' value='<%= obj.Datasource.file %>' placeholder='data.shp' pattern='[\w+\d+\.\/_-]+\.(shp|SHP)'/><!--
        --><a href='#browsefile' class='button icon folder browsefile'></a>
      </div>
    </section>
    <%= this.layerconf(obj) %>
    <section class='text-right'>
      <a href='#' class='button submit icon okay'>Done</a>
    </section>
  </div>

  <div class='fields'><%= this.layerfields(obj.vt.fields) %></div>
</form>

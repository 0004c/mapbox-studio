<!DOCTYPE html>
<html>

<head>
  <meta charset='UTF-8'/>
  <link href='/ext/base/base.css' rel='stylesheet' />
  <link href='/ext/mapbox.css' rel='stylesheet' />
  <link href='/app/app.css' rel='stylesheet' />
  <title>Error</title>
</head>

<body id='view' class='fill-denim pad2y'>

<%
var title = 'Error';
var message = error.message || error.toString();
switch (error.code) {
case 'ENOENT':
  title = 'Not found';
  message = "Couldn't open file at <em>" + error.path + "</em>";
  break;
};
%>

<div class='center col6 margin3 dark'>
  <h3 class='icon tilemill pad4y'>TileMill 2</h3>
  <div class='pad4 fill-darken0 clearfix'>
    <h2><%= title %></h2>
    <p><%= message.split(' ').map(function(v) { return v.length > 20 ? "<span class='long'>" + v + "</span>" : v; }).join(' ') %></p>
    <a href='/' class='button icon quiet prev col8 margin2'>Back</a>
  </div>
</div>


<style type='text/css'>
/* Error page */
.message .long { word-break:break-all };
</style>

</body>

</html>
